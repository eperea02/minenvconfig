function cd() {
  if [ $# -eq 0 ]; then
    builtin cd ~
  else
    builtin cd "$1"
  fi
  ls
}

function gcc() {
  git add .
  git commit -m "$1"
}

function gm() {
  git checkout $BRANCH
}

function gp() {
  git pull
}

function gpm() {
